    <style>
        .layout-header {
            grid-area: header;
        }

        .layout-main {
            grid-area: main;
        }

        .layout-footer {
            grid-area: footer;
        }

        .grid-container {
            display: grid;
            grid-template-areas:
                'header'
                'main'
                'footer';
        }

        .nav-item.search-bar {
            margin-left: 10px; /* Adjust the margin as needed */
        }

            .nav-item.search-bar form {
                display: flex;
                align-items: center;
            }

            .nav-item.search-bar input {
                margin-right: 5px;
            }

        /*  media (max-width: 767px) {
                                    .nav-item.search-bar {
                                        display: none;
                        }
                        } */

        .row {
            display: flex;
            flex-wrap: wrap; 
            justify-content: space-between; 
            align-items: stretch; 
        }

        .footer-about, .footer-links, .footer-contact {
            flex: 1; 
            padding: 0 15px; 
        }

        @@media (max-width: 768px) {
            .row {
                flex-direction: column; 
            }

            .footer-about, .footer-links, .footer-contact {
                padding: 15px 0; 
            }
        }

        .site-footer {
            background-color: #8d88cc;
            color: #fff;
            padding: 20px 0;
            font-size: 16px;
        }

            .site-footer a {
                color: #fff;
                text-decoration: none;
            }

                .site-footer a:hover {
                    text-decoration: underline;
                }

            .site-footer h6 {
                color: #fff;
                margin-top: 0;
                margin-bottom: 15px;
            }

        .footer-about, .footer-links, .footer-contact, .footer-social {
            margin-bottom: 20px;
        }

        .footer-bottom {
            border-top: 1px solid white;
            color: white;
            padding-top: 10px;
            text-align: center;
        }

        @@media (max-width: 768px) {
            .site-footer .container {
                width: 100%;
                padding: 0 15px;
            }

            .site-footer .row {
                flex-direction: column;
                align-items: center;
            }

            .footer-about, .footer-links, .footer-contact, .footer-social {
                text-align: center;
            }

                .footer-links ul, .footer-social {
                    display: flex;
                    justify-content: center;
                    padding: 0;
                }

                .footer-links li {
                    padding: 0 10px;
                }
        }

        p {
            color: white;
        }
        h6{
            font-size: 20px;
        }
    </style>
</head>

<body>
    <header>
        <div class="header-area">
            <div id="sticky-header" class="main-header-area">
                <div class="container-fluid p-0">
                    <div class="row align-items-center no-gutters">
                        <div class="col-xl-5 col-lg-7">
                            <div class="main-menu  d-none d-lg-block">
                                <nav>
                                    <ul id="navigation">
                                        <li><a class="active" href="/">Home</a></li>
                                        <li><a href="/Courses/Index">Courses</a></li>
                                        <li><a href="/Home/About">About</a></li>
                                        <li><a href="/Home/Contact">Contact</a></li>
                                        @*   @if (ViewData["Title"]?.ToString() != "Lectures")
                                        {
                                        } *@
                                    </ul>
                                </nav>
                            </div>
                        </div>
                        @if (!isLogged)
                        {
                            <div style="padding-right:5vh" class="col-xl-7 col-lg-3 d-none d-lg-block">
                                <div class="log_chat_area d-flex align-items-center">
                                    <a href="/Auth/SignIn" style="font-family: 'Poppins'" class="login popup-with-form">
                                        <i class="flaticon-user"></i>
                                        <span>Sign in</span>
                                    </a>
                                    <div class="live_chat_btn">
                                        <a class="boxed_btn_orange" style="font-family: 'Poppins'; text-align:center; width:20vh" href="/Auth/SignUp">
                                            <span>Sign Up</span>
                                        </a>
                                    </div>
                                </div>
                            </div>
                        }
                        else
                        {
                            <div style="padding-right:5vh" class="col-xl-7 col-lg-3 d-none d-lg-block">
                                <div class="log_chat_area d-flex align-items-center">
                                    <a href="/Auth/SignOut" class="login popup-with-form">
                                        <i class="flaticon-user"></i>
                                        <span>Sign out</span>
                                    </a>
                                </div>
                            </div>
                        }
                        <div class="col-12">
                            <div class="mobile_menu d-block d-lg-none"></div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <div class="grid-container">
        <div class="layout-header">
        </div>
        <div class="layout-main">
            @RenderBody()
        </div>
        <footer class="site-footer">
            <div class="container" style="color: white">
                <div class="row">
                    <div class="footer-about">
                        <h6>About SmartyStars</h6>
                        <p>High-quality, interactive courses designed to make learning enjoyable for kids.</p>
                    </div>
                    <div class="footer-links">
                        <h6>Quick Links</h6>
                        <ul>
                            <li><a href="/Home/About">About Us</a></li>
                            <li><a href="/Courses/Index">Courses</a></li>
                             <li><a href=#>FAQ</a></li>
                            <li><a href=#>Pricing</a></li> 
                        </ul>
                    </div>
                    <div class="footer-contact">
                        <h6>Contact Us</h6>
                        <p><strong>Email:</strong> virtualteacher.official@gmail.com</p>
                        <p><strong>Phone:</strong> +359888888888</p>
                        <p><strong>Address:</strong> Sofia, Bulgaria</p>
                    </div>
                    @*   <div class="footer-social">
                    <h6>Follow Us</h6>
                    <!-- Icons or links to social media -->
                    </div> *@
                </div>
                <div class="footer-bottom">
                    <p>© 2024 SmartyStars. All Rights Reserved.</p>
                </div>
            </div>
        </footer>

        @*  <div class="layout-footer">
        <footer style="background-color: #8d88cc; font-family: 'Poppins', sans-serif; position: relative; bottom: 0; width: 100%; height: 100px;">
