            }

            .site-footer .row {
                flex-direction: column;
                align-items: center;
            }

            .footer-about, .footer-links, .footer-contact, .footer-social {
                text-align: center;
            }

                .footer-links ul, .footer-social {
                    display: flex;
                    justify-content: center;
                    padding: 0;
                }

                .footer-links li {
                    padding: 0 10px;
                }
        }

