            align-items: center;
        }
        @@media (max-width: 992px) { /* Adjust this breakpoint as needed */
    .nav-item.search-bar form input[type="search"] {
        flex-grow: 1; /* Allows the input to grow but not beyond the available space */
        width: auto; /* Adjusts the width automatically */
        max-width: 140px; /* Prevents the input from taking too much space */
    }

    .nav-item.search-bar form button {
        white-space: nowrap; /* Prevents the text inside the button from wrapping */
    }
}

@@media (max-width: 768px) {
    .nav-item.search-bar {
        display: none; /* Optionally hide the search bar on very small screens */
