        }

            .navbar-brand > img {
                height: 55px; /* Adjust based on your navbar's height */
                margin-right: 10px;
            }

            .navbar-brand .smart {
                font-weight: 300; /* Lighter weight for 'Smart' */
                color: yellow;
            }

            .navbar-brand .stars {
                font-weight: 700; /* Bolder weight for 'Stars' */
                color: yellow;
            }

        #navigation {
            list-style: none;
            padding: 0;
            margin-left: 40px;
            display: flex;
            align-items: center;
        }

            #navigation li {
                margin-right: 20px; /* Adjust spacing between items as needed */
            }

