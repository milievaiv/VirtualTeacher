        75% {
            top: 60%;
            transform: rotate(30deg);
        }

        100% {
            left: 110%;
            transform: rotate(45deg);
        }
    }

    @@keyframes starTwinkle {
        0% {
            background: rgba(255,255,255,0.4);
        }

        25% {
            background: rgba(255,255,255,0.8);
        }

        50% {
